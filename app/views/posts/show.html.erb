<div class="Content">
<p style="color: green"><%= notice %></p>

  <div class="M_HeadLinks">
    <%= link_to "<- К постам", posts_path %>
    <div class="M_Options">
      <%= link_to "Edit this post", edit_post_path(@post) %> |
      <%= button_to "Destroy this post", @post, method: :delete %>
    </div>

  </div>
<div class="W_Post" style="display:flex">
  <div class="S_Post">
    <%= render @post %>

    <p>
      <strong>Автор:</strong>
      <%= @post.author %>
    </p>
  </div>
  <div class="S_Comments">
  <h2>Добавить коммент</h2>
    <%= render "comments/form" %>

    <h2>Комменты</h2>

    <% @post.comments.each do |comment| %>
      <%= render comment %>
    <% end %>
  </div>
</div>
</div>