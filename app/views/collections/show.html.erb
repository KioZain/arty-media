<div class="Content">
  <p style="color: green"><%= notice %></p>

  <div class="M_HeadLinks">
    <%= link_to "<- В коллекции", collections_path %>


    <% if current_user && current_user.admin?%>
      <%= link_to 'Edit Collection', edit_admin_collection_path(@collection), class: 'btn btn-primary' %>
      <%= button_to "Destroy this collection", admin_collection_path(@collection), method: :delete %>
    <% end %>


  </div>
<div class="O_Collection">
  <h1><%= @collection.title %></h1>
  <p><%= @collection.body %></p>
</div>
  <h2>Крутые штуки:</h2>

  <div class="S_Posts">
    <% @collection.posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  </div>
</div>